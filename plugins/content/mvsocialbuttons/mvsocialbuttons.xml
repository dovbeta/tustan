    <version>2.0.0</version>
    <description>PLG_MVSOCIALBUTTONS_XML_DESC</description>	
    <languages folder="language">
		<language tag="en-GB">en-GB.plg_content_mvsocialbuttons.ini</language>
		<language tag="en-GB">en-GB.plg_content_mvsocialbuttons.sys.ini</language>
		<language tag="ru-RU">ru-RU.plg_content_mvsocialbuttons.ini</language>
		<language tag="ru-RU">ru-RU.plg_content_mvsocialbuttons.sys.ini</language>
		<language tag="uk-UA">uk-UA.plg_content_mvsocialbuttons.ini</language>
